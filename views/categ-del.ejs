<%- include('header') -%>
    <h1><%= title %></h1>

    <% for(let item of items) {%>
        
        <form method="post">
            <input type="hidden" name="id" value=<%= item._id %>>
            Name: <%= item.name %><br>
            Description: <%= item.description %><br>
            <br>
            <h2>Are you sure you want to delete this category?</h2>
            <button>DELETE</button>
        </form>
    <% } %>
<%- include('footer') -%>
